<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_dialog_background"
    android:padding="20dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:id="@+id/restaurant_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderGray"
            android:layout_marginBottom="10dp"
            />

        <!--메인 메뉴-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:weightSum="14"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="메인 메뉴"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="@dimen/menu_title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="top"
                android:layout_weight="4"
                />

            <TextView
                android:id="@+id/restaurant_menu_main_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tool:text="카레 염지 순살치킨, 제육볶음, 알리오 올리오 스파게티, 닭강정, 봉황 감자탕"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="@dimen/menu_content_text_size"
                android:textColor="@color/gray900"
                android:layout_gravity="top"
                android:layout_weight="10"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderGray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <!--사이드 메뉴-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="14"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="사이드 메뉴"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="@dimen/menu_title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="top"
                android:layout_weight="4"
                />

            <TextView
                android:id="@+id/restaurant_menu_side_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tool:text="반찬 3종, 김치, 샐러드"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="@dimen/menu_content_text_size"
                android:textColor="@color/gray900"
                android:layout_gravity="top"
                android:layout_weight="10"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderGray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <!--후식-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:weightSum="14"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="후식"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="@dimen/menu_title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="top"
                android:layout_weight="4"
                />

            <TextView
                android:id="@+id/restaurant_menu_dessert_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tool:text="토스트(누텔라, 딸기잼), 매실차"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="@dimen/menu_content_text_size"
                android:textColor="@color/gray900"
                android:layout_gravity="top"
                android:layout_weight="10"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderGray"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

</LinearLayout>